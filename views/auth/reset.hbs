<div class="row">
    <div class="col s8 offset-s2">
        <form action="/reset" method="post" class="col s12">

            <h4>Восстановить пароль</h4>
            {{#if error}}
                <p id="err" data-error="{{error}}"></p>
            {{/if}}
            <div class="input-field col s12">
                <input id="email" autocomplete="username" type="email" name="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Введите почту" data-success=""></span>
            </div>

            <button id="loginBtn" class="btn waves-effect waves-light" type="submit">Сбросить
                <i class="material-icons right"></i>
            </button>

        </form>
    </div>
</div>
